    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": { "FLASK_APP": "app.py"},
            "cwd": "${workspaceFolder}/flask",
            "args": ["run", "--no-debugger"],
            "jinja": true,
        },

        {
            "name": "Python: Flask test",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": { "FLASK_APP": "test.py"},
            "cwd": "${workspaceFolder}/flask",
            "args": ["run", "--no-debugger"],
            "jinja": true,
        },
    ]
}
